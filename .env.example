# Telegram Bot Configuration
BOT_TOKEN=your_bot_token_here

# Web Push Notifications (PWA)
# Generate VAPID keys with: npm run generate-vapid
VAPID_PUBLIC_KEY=your_vapid_public_key_here
VAPID_PRIVATE_KEY=your_vapid_private_key_here
VAPID_SUBJECT=https://ispanskie-msk.vercel.app

# Daily Digest Configuration
DIGEST_CHANNEL_ID=@your_channel_username
DIGEST_TIME=09:00

# GitHub Database Configuration
GITHUB_REPO=EgorLesNet/ispanskie_msk_bot_ver
DB_FILE_PATH=public/db.json
DB_BRANCH=main
GITHUB_TOKEN=your_github_token_here

# Server Configuration
PORT=3000

# PWA/Web handoff auth (одноразовый код для возврата с Telegram Mini App)
# Сгенерируйте случайную строку (32+ байта) и добавьте в Vercel Env Vars
AUTH_CODE_SECRET=your_random_secret_here

# Инструкция по настройке:
# 1. Скопируйте этот файл: cp .env.example .env
# 2. Сгенерируйте VAPID ключи: npm run generate-vapid
# 3. Вставьте ключи в .env
# 4. Укажите BOT_TOKEN от @BotFather
# 5. Укажите DIGEST_CHANNEL_ID (канал для дайджеста, например @ispanskie_msk)
# 6. Создайте GitHub Personal Access Token с правами repo
# 7. Измените VAPID_SUBJECT на ваш домен
